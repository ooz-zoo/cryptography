<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sec">

    <ImageView
        android:id="@+id/lattepic"
        android:layout_width="436dp"
        android:layout_height="798dp"
        android:layout_marginTop="-270dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/may" />


    <ImageView
        android:id="@+id/back"
        android:layout_width="41dp"
        android:layout_height="30dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="435dp"
        android:layout_height="466dp"
        android:layout_marginTop="205dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_xml" />

    <TextView
        android:id="@+id/latte"
        android:layout_width="92dp"
        android:layout_height="38dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="532dp"
        android:fontFamily="@font/open_sans_extra_bold"
        android:text="Mojito"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lattepic" />

    <TextView
        android:id="@+id/kes"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="531dp"
        android:fontFamily="@font/open_sans_extra_bold"
        android:gravity="center_vertical"
        android:text="Kes 500"


        android:textColor="@color/colorPrimary"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/latte"
        app:layout_constraintTop_toTopOf="@+id/lattepic" />

    <TextView
        android:id="@+id/cupportion"
        android:layout_width="92dp"
        android:layout_height="26dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center_horizontal"
        android:text="/glass"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kes" />

    <TextView
        android:id="@+id/desctext"
        android:layout_width="362dp"
        android:layout_height="91dp"

        android:layout_marginStart="36dp"
        android:layout_marginTop="500dp"
        android:text="Traditional Cuban punch consisting of white rum, sugar (traditionally sugar cane juice), lime juice, soda water, and mint"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/minus"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/desctext"
        app:srcCompat="@drawable/ic_minus" />

    <TextView
        android:id="@+id/count"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/minus"
        app:layout_constraintTop_toBottomOf="@+id/desctext" />

    <ImageView
        android:id="@+id/plus"
        android:layout_width="56dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/count"
        app:layout_constraintTop_toBottomOf="@+id/desctext"
        app:srcCompat="@drawable/ic_plus" />

    <Button
        android:id="@+id/cart"
        android:layout_width="385dp"
        android:layout_height="52dp"

        android:layout_marginStart="12dp"
        android:layout_marginTop="750dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/open_sans_bold"
        android:text="Add to Cart"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="38dp"
        android:layout_height="27dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="344dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/time" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="130dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Number of glasses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desctext" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="62dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="344dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="5 min"
        android:textColorHighlight="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="344dp"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trending" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="57dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="344dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="500 kcal"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="34dp"
        android:layout_height="24dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="344dp"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rangestar" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="67dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="344dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="4.5 stars"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="456dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="192dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hear" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="420dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="696dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Total Cost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalprice"
        android:layout_width="109dp"
        android:layout_height="36dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="696dp"
        android:fontFamily="@font/open_sans_extra_bold"
        android:text="Kes 500"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="755dp"
        app:layout_constraintStart_toStartOf="@+id/cart"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shopping_cart" />


</androidx.constraintlayout.widget.ConstraintLayout>